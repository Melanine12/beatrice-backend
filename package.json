{
  "name": "beatrice-backend",
  "version": "1.0.0",
  "description": "Backend API pour le système de gestion de l'Hôtel Beatrice",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "npm run clean && npm run build:server",
    "build:server": "echo 'Backend ready for production'",
    "clean": "rm -rf dist build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server/**/*.js --fix",
    "lint:fix": "eslint server/**/*.js --fix",
    "format": "prettier --write server/**/*.js",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "prestart": "echo 'Starting Hôtel Beatrice Backend...'",
    "deploy:dev": "./deploy.sh development",
    "deploy:staging": "./deploy.sh staging",
    "deploy:prod": "./deploy.sh production",
    "cleanup": "./cleanup.sh all",
    "docker:build": "docker build -t beatrice-backend .",
    "docker:run": "docker run -p 5002:5002 beatrice-backend",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "nodejs",
    "express",
    "mysql",
    "sequelize"
  ],
  "author": "Hôtel Beatrice",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "fs-extra": "^11.3.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^2.2.1",
    "mysql2": "^3.6.0",
    "pdfkit": "^0.17.1",
    "sequelize": "^6.32.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
